<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.alvin.receiptmanager" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="Receipt Manager"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="Receipt Manager"
            android:theme="@style/AppTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ItemDetails"
            android:label="Breakfast"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>

        <activity
            android:name=".lunchdetails"
            android:label="Lunch"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".DinnerDetails"
            android:label="@string/title_activity_dinner_details"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
    </application>

</manifest>
